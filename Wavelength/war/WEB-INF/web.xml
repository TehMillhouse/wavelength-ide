<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
                             http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5">
	<welcome-file-list>
		<welcome-file>WavelengthPrototype.html</welcome-file>
	</welcome-file-list>
  <!-- Servlets -->
  <servlet>
    <servlet-name>DatabaseServiceImpl</servlet-name>
    <servlet-class>edu.kit.wavelength.server.database.DatabaseServiceImpl</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>DatabaseServiceImpl</servlet-name>
    <url-pattern>/wavelength/database</url-pattern>
  </servlet-mapping>
</web-app>
